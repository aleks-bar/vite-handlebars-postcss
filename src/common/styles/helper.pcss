.__container {
	@map container default-options;

	@media (min-width : map(breakpoints, min, md)) {
		max-width : map(container, breakpoints, md, max-width);
	}

	@media (min-width : map(breakpoints, min, lg)) {
		max-width : map(container, breakpoints, lg, max-width);
	}

	@media (min-width : map(breakpoints, min, xl)) {
		max-width : map(container, breakpoints, xl, max-width);
	}
}

.__loading {
	position : relative;

	&::before {
		content    : "";
		position   : absolute;
		width      : 100%;
		height     : 100%;
		background : var(--color-gray-1);
		opacity    : .8;
		inset      : 0;
		z-index    : 5;
		box-shadow : 0 0 30px 15px var(--color-gray-1);
		animation  : 1.7s flash linear infinite;
	}
}

